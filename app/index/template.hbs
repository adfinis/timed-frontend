<TrackingBar data-test-tracking-bar />
<div>
  <div class="grid grid--12of12">
    <div class="grid-cell grid-cell-sm--6of12">
      <h1 class="no-margin">{{moment-format @model "dddd, DD.MM.YYYY"}}</h1>
    </div>
    <div class="grid-cell grid-cell-sm--6of12 grid-cell--align-center">
      <DateNavigation @current={{this.date}} @onChange={{fn (mut this.date)}} />
    </div>
    <div class="grid-cell visible-md">
      <WeeklyOverview @expected={{this.expectedWorktime}}>
        {{#each this.weeklyOverviewData as |d|}}
          <WeeklyOverviewDay
            @day={{d.day}}
            @active={{d.active}}
            @worktime={{d.worktime}}
            @workday={{d.workday}}
            @absence={{d.absence}}
            @holiday={{d.holiday}}
            @prefix={{d.prefix}}
            @on-click={{(fn (mut this.date))}}
            data-test-weekly-overview-day={{moment-format d.day "DD"}}
          />
        {{/each}}
      </WeeklyOverview>
    </div>
    <div class="grid-cell hidden-sm">
      <div class="btn-group btn-group--vertical">
        <LinkTo @route="index.activities" @tagName="button" class="btn">
          Activities
          <span class="badge">{{humanize-duration this.activitySum true}}</span>
        </LinkTo>
        <LinkTo @route="index.attendances" @tagName="button" class="btn">
          Attendances
          <span class="badge">{{humanize-duration this.attendanceSum}}</span>
        </LinkTo>
        <LinkTo @route="index.reports" @tagName="button" class="btn">
          Timesheet
          <span class="badge">{{humanize-duration this.reportSum}}</span>
        </LinkTo>
        {{#if this.absence}}
          <button
            type="button"
            data-test-edit-absence
            class="btn btn-warning"
            disabled={{cannot "access page"}}
            {{on "click" (toggle "showEditModal" this)}}
          >
            {{this.absence.absenceType.name}}
          </button>
        {{/if}}
        <button
          type="button"
          data-test-add-absence
          class="btn btn-default"
          disabled={{cannot "access page"}}
          {{on "click" (toggle "showAddModal" this)}}
        >
          Add absence
        </button>
      </div>
    </div>
    <div class="grid-cell visible-sm">
      <ul class="nav-tabs">
        <li>
          <LinkTo @route="index.activities">
            Activities
            <span class="badge">{{humanize-duration
                this.activitySum
                true
              }}</span>
          </LinkTo>
        </li>
        <li>
          <LinkTo @route="index.attendances">
            Attendances
            <span class="badge">{{humanize-duration this.attendanceSum}}</span>
          </LinkTo>
        </li>
        <li>
          <LinkTo @route="index.reports">
            Timesheet
            <span class="badge">{{humanize-duration this.reportSum}}</span>
          </LinkTo>
        </li>
        <li class="nav-tab--buttons">
          {{#if this.absence}}
            <button
              type="button"
              data-test-edit-absence
              class="btn btn-warning"
              {{on "click" (toggle "showEditModal" this)}}
            >
              {{this.absence.absenceType.name}}
            </button>
          {{/if}}
          <button
            type="button"
            data-test-add-absence
            class="btn btn-default"
            disabled={{cannot "access page"}}
            {{on "click" (toggle "showAddModal" this)}}
          >
            Add absence
          </button>
        </li>
      </ul>
    </div>
    <div class="grid-cell">
      <div class="tab-content">
        {{outlet}}
      </div>
    </div>
  </div>
</div>

{{#if this.absence}}
  {{#let (changeset this.absence this.AbsenceValidations) as |changeset|}}
    <SyModal
      @size="auto"
      @visible={{this.showEditModal}}
      @on-close={{queue
        (toggle "showEditModal" this)
        (fn this.rollback changeset)
      }}
      as |modal|
    >
      <div data-test-edit-absence-form>
        <ValidatedForm
          @model={{changeset}}
          @on-submit={{fn this.saveAbsence changeset}}
          as |f|
        >
          <modal.header>
            Edit absence
          </modal.header>
          <modal.body>
            <f.input @name="absenceType" as |fi|>
              <div class="btn-group btn-group--auto">
                {{#each absenceTypes as |at|}}
                  <button
                    type="button"
                    class={{concat
                      "btn btn-default"
                      (if (eq at.id changeset.absenceType.id) " active")
                    }}
                    {{on "click" (fn fi.update at)}}
                  >{{at.name}}</button>
                {{/each}}
              </div>
            </f.input>
            <f.input @name="date" as |fi|>
              <PowerCalendar
                class="calendar"
                @selected={{get changeset "date.content"}}
                @center={{(or this.center this.date)}}
                @onCenterChange={{perform this.setCenter}}
                @onSelect={{action fi.update value="moment"}}
                as |calendar|
              >
                <div class={{if calendar.loading "loading-mask"}}>
                  <calendar.Nav />
                  <calendar.Days
                    @disabledDates={{this.disabledDatesForEdit}}
                    @startOfWeek={{1}}
                  />
                </div>
              </PowerCalendar>
            </f.input>
            <f.input
              @type="textarea"
              @placeholder="Enter comment..."
              @name="comment"
            />
          </modal.body>
          <modal.footer>
            <button
              type="button"
              class="btn btn-danger"
              {{on "click" (fn this.deleteAbsence this.absence)}}
              data-test-edit-absence-delete
            >Delete</button>
            <f.submit @label="Save" data-test-edit-absence-save />
          </modal.footer>
        </ValidatedForm>
      </div>
    </SyModal>
  {{/let}}
{{/if}}

{{#let
  (changeset this.newAbsence this.MultipleAbsenceValidations)
  as |changeset|
}}
  <SyModal
    @size="auto"
    @visible={{this.showAddModal}}
    @on-close={{queue
      (toggle "showAddModal" this)
      (fn this.rollback changeset)
    }}
    as |modal|
  >
    <div data-test-add-absence-form>
      <ValidatedForm
        @model={{changeset}}
        @on-submit={{fn this.addAbsence changeset}}
        as |f|
      >
        <modal.header>
          New absence
        </modal.header>
        <modal.body>
          <f.input @name="absenceType" as |fi|>
            <div class="btn-group btn-group--auto">
              {{#each this.absenceTypes as |at|}}
                <button
                  type="button"
                  class={{concat
                    "btn btn-default"
                    (if (eq at.id changeset.absenceType.id) " active")
                  }}
                  {{on "click" (fn fi.update at)}}
                >{{at.name}}</button>
              {{/each}}
            </div>
          </f.input>
          <f.input @name="dates">
            <PowerCalendarMultiple
              class="calendar"
              @selected={{changeset.dates}}
              @center={{this.center}}
              @onCenterChange={{perform this.setCenter}}
              @onSelect={{fn this.updateSelection changeset "dates"}}
              as |calendar|
            >
              <div class={{if calendar.loading "loading-mask"}}>
                <calendar.Nav />
                <calendar.Days
                  @disabledDates={{this.disabledDates}}
                  @startOfWeek={{1}}
                />
              </div>
            </PowerCalendarMultiple>
          </f.input>
          <f.input
            @type="textarea"
            @placeholder="Enter comment..."
            @name="comment"
          />
        </modal.body>
        <modal.footer>
          <f.submit @label="Save" data-test-add-absence-save />
        </modal.footer>
      </ValidatedForm>
    </div>
  </SyModal>
{{/let}}
