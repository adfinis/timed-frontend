{{#-in-element destination}}
  <aside class="filter-sidebar {{if visible 'filter-sidebar--visible'}}">
    <div class="filter-sidebar-title">
      {{#if appliedCount}}
        {{appliedCount}} Filter{{if (gt appliedCount 1) 's'}} applied
      {{else}}
        Filters
      {{/if}}
      {{#if on-reset}}
        <a href="#" class="filter-sidebar-reset" {{action on-reset on='click'}}>
          Reset
        </a>
      {{/if}}
    </div>

    <div class="filter-sidebar-content">
      {{yield (hash
        group  = (component 'filter-sidebar/group')
        label  = (component 'filter-sidebar/label')
        filter = (component 'filter-sidebar/filter')
      )}}
    </div>

    <button
      type="button"
      title="{{if visible 'Hide' 'Show'}} filters"
      class="filter-sidebar-toggle"
      {{on "click" (fn (toggle 'visible' this))}}
    >
      <span class="filter-sidebar-toggle-background"></span>
      <span class="filter-sidebar-toggle-icon">
        {{fa-icon 'sliders'}}
        {{#if appliedCount}}
          <span class="filter-sidebar-toggle-icon-badge">{{appliedCount}}</span>
        {{/if}}
      </span>
      <span class="filter-sidebar-toggle-text">Filters</span>
    </button>
  </aside>
  <div
    role="button"
    class="filter-sidebar-overlay {{if visible 'filter-sidebar-overlay--visible'}}"
    {{on "click" (fn (mut visible) false)}}
  ></div>
{{/-in-element}}