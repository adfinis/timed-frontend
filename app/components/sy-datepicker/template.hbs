{{#basic-dropdown horizontalPosition='auto-right' as |dd|}}
  {{#dd.trigger tabindex=-1}}
    <input
      aria-label="Date"
      type="text"
      class="form-control"
      pattern="\d{1,2}\.\d{1,2}\.\d{2,4}"
      name={{name}}
      value={{displayValue}}
      placeholder={{placeholder}}
      onfocus={{action 'handleFocus' dd}}
      onblur={{action 'handleBlur' dd}}
      onchange={{action 'handleChange'}}
      oninput={{action 'checkValidity'}}
    >
  {{/dd.trigger}}

  {{#dd.content}}
    {{sy-calendar
      center         = center
      selected       = value
      class          = 'sy-datepicker'
      onCenterChange = (action (mut center) value='moment')
      onSelect       = (action (queue (action on-change) (action 'checkValidity')) value='moment')
    }}
  {{/dd.content}}
{{/basic-dropdown}}
