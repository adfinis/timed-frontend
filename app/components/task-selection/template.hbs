{{yield (hash
  customer             = (component 'power-select'
    options            = customersAndRecentTasks
    disabled           = disabled
    selected           = customer
    placeholder        = 'Select customer...'
    searchField        = 'longName'
    allowClear         = true
    tagName            = 'div'
    class              = 'customer-select'
    onChange           = (action (mut customer))
    extra              = (hash
      lazy             = true
      selectedTemplate = selectedTemplate
      optionTemplate   = customerOptionTemplate
    )
  )
  project              = (component 'power-select'
    options            = projects
    disabled           = (or disabled (not customer))
    selected           = project
    placeholder        = 'Select project...'
    searchField        = 'name'
    allowClear         = true
    tagName            = 'div'
    class              = 'project-select'
    onChange           = (action (mut project))
    extra              = (hash
      selectedTemplate = selectedTemplate
      optionTemplate   = projectOptionTemplate
    )
  )
  task                 = (component 'power-select'
    options            = tasks
    disabled           = (or disabled (not project))
    selected           = task
    placeholder        = 'Select task...'
    searchField        = 'name'
    allowClear         = true
    tagName            = 'div'
    class              = 'task-select'
    onChange           = (action (mut task))
    extra              = (hash
      selectedTemplate = selectedTemplate
      optionTemplate   = taskOptionTemplate
    )
  )
  clear                = (action 'clear')
  reset                = (action 'reset')
)}}
