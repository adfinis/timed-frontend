{{yield (hash
  customer             = (component 'optimized-power-select'
    options            = this.customersAndRecentTasks
    disabled           = disabled
    selected           = this.customer
    placeholder        = 'Select customer...'
    searchField        = 'longName'
    allowClear         = true
    tagName            = 'div'
    class              = 'customer-select'
    onChange           = (fn (mut this.customer))
    extra              = (hash
      lazy             = true
      selectedTemplate = this.selectedTemplate
      optionTemplate   = this.customerOptionTemplate
    )
  )
  project              = (component 'optimized-power-select'
    options            = this.projects
    disabled           = (or disabled (not this.customer))
    selected           = this.project
    placeholder        = 'Select project...'
    searchField        = 'name'
    allowClear         = true
    tagName            = 'div'
    class              = 'project-select'
    onChange           = (fn (mut project))
    extra              = (hash
      selectedTemplate = this.selectedTemplate
      optionTemplate   = this.projectOptionTemplate
    )
  )
  task                 = (component 'optimized-power-select'
    options            = tasks
    disabled           = (or disabled (not project))
    selected           = task
    placeholder        = 'Select task...'
    searchField        = 'name'
    allowClear         = true
    tagName            = 'div'
    class              = 'task-select'
    onChange           = (action (mut task))
    extra              = (hash
      selectedTemplate = selectedTemplate
      optionTemplate   = taskOptionTemplate
    )
  )
  clear                = (action 'clear')
  reset                = (action 'reset')
)}}
