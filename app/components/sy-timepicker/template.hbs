<input
  aria-label="Time"
  type="text"
  class="form-control"
  pattern={{this.pattern}}
  value={{this.displayValue}}
  maxlength={{this.maxlength}}
  placeholder={{this.placeholder}}
  autocomplete="off"
  {{on "keydown" this.keyDown}}
  {{on "change" this.change}}
  {{on "focusout" (or this.args.focusOut (noop))}}
/>
