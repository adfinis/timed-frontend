<div class="record-button-container {{if this.active 'recording'}}">
  {{#if this.active}}
    <button
      data-test-record-stop
      type="submit"
      class="record-button record-button--stop"
      {{on "click" (prevent-default (optional @onStop))}}
    >
      <FaIcon @icon="square" @prefix="fas" />
    </button>
    <div class="record-button-timer">
      {{duration-since @activity.from}}
    </div>
  {{else}}
    <button
      data-test-record-start
      type="submit"
      class="record-button record-button--start"
      {{on "click" (prevent-default (optional @onStart))}}
    >
      <FaIcon @icon="play" @prefix="fas" @transform="right-1" />
    </button>
  {{/if}}
</div>
