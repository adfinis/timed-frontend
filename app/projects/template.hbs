<PagePermission>
  {{#if loading}}
    <div class="empty">
      {{loading-icon}}
    </div>
  {{else}}
    <div class="header">
      {{#power-select
        data-test-customer-selection
        tagName="div"
        class="header-item"
        options=customers
        placeholder="Select customer..."
        searchField="name"
        onChange=(action "handleCustomerChange")
        selected=selectedCustomer
        allowClear=true
      as |customer|
      }}
        <div>{{customer.name}}</div>
      {{/power-select}}
      {{#power-select
        data-test-project-selection
        tagName="div"
        class="header-item"
        options=filteredProjects
        placeholder="Select project..."
        searchField="name"
        onChange=(action "handleProjectChange")
        selected=selectedProject
        allowClear=true
        disabled=(not selectedCustomer)
      as |project|
      }}
        <div>{{project.name}}</div>
      {{/power-select}}
    </div>
    {{#if selectedProject}}
      <h3>
        <span class="header-left">
          Tasks of {{selectedProject.name}}
        </span>
        <span class="header-right">
          <button class="btn btn-primary" {{action (perform createTask)}} data-test-add-task>Add Task</button>
        </span>
      </h3>
      <div class="task-table-container">
        {{#ember-scrollable class='projects-scrollable-container'}}
          <table class="table table--striped table--projects" data-test-tasks-table>
            <thead>
            <tr>
              <th>Name</th>
              <th>Reference</th>
              <th>Estimated time</th>
              <th>Archived</th>
            </tr>
            </thead>
            <tbody>
            {{#each tasks as |task|}}
              <tr class="pointer {{if (eq selectedTask task) "selected"}}" {{action (mut selectedTask) task}} data-test-task-table-row>
                <td data-test-table-name>{{task.name}}</td>
                <td data-test-table-reference>{{if task.reference task.reference "-"}}</td>
                <td data-test-table-estimated-time>{{if task.estimatedTime (humanize-duration task.estimatedTime) "-"}}</td>
                <td>{{sy-checkmark data-test-table-archived checked=task.archived}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        {{/ember-scrollable}}
      </div>
      {{#if selectedTask}}
        <div class="task-form-container" data-test-task-form>
          <h2>{{if selectedTask.isNew "Add task" selectedTask.name}}</h2>
          <ValidatedForm
            @model={{changeset this.selectedTask TaskValidations}}
            @on-submit={{perform this.saveTask}}
            as |f|
          >
            <div class="task-form-container-row">
              <div class="task-form-container-column">
                <f.input
                  @label="Name"
                  @name="name"
                  @required={{true}}
                  data-test-name
                />
                <f.input
                  @label="Reference"
                  @name="reference"
                  @required={{false}}
                  data-test-reference
                />
              </div>
              <div class="task-form-container-column">
                <f.input @name="estimatedTime" as |fi|>
                  <label>
                    Estimated time
                  </label>
                  <SyDurationpicker
                    @value={{fi.value}}
                    @onChange={{fi.update}}
                    data-test-estimated-time
                  />
                </f.input>

                <f.input data-test-archived @name="archived" as |fi|>
                  <label>
                    Archived
                  </label>
                  <SyCheckbox
                    @checked={{this.selectedTask.archived}}
                    @value={{fi.value}}
                    @on-change={{fi.update}}
                  />
                </f.input>
              </div>
            </div>
            <div class="btn-toolbar btn-toolbar--right">
              <button
                class="btn btn-secondary"
                data-test-cancel
                {{on "click" (fn (mut this.selectedTask) null)}}
              >
                Cancel
              </button>
              <f.submit
                @label="Save"
                @disabled={{f.model.isInvalid}}
                data-test-save
              />
            </div>
          </ValidatedForm>
        </div>
      {{/if}}
    {{else}}
      <div class="empty" data-test-none-selected>
        <div>
          {{fa-icon 'search'}}
          <h3>Please select a customer and a project</h3>
        </div>
      </div>
    {{/if}}
  {{/if}}
</PagePermission>
